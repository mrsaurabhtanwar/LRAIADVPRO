# .env.docker - Environment variables for Docker deployment

# Database Configuration (Docker services)
DATABASE_URL=postgresql://quiz_user:quiz_password@postgres:5432/quiz_app

# Celery Configuration (Docker services)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random

# GitHub AI API
GITHUB_TOKEN=github_pat_YOUR_TOKEN_HERE

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Production settings
DEBUG=False
LOG_LEVEL=INFO
FLASK_ENV=production

# Application URLs
WEB_PORT=5001
API_PORT=8000
FLOWER_PORT=5555
